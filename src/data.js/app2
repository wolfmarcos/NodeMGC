const express = require("express");
const app = express();
const port = 3001;
const { frutas, dinero } = require("./f");


app.get("/", (req, res) => {
  app.set(__dirname, 'views');
  //let pa=(frutas.map((fruta) => (fruta)));
  let ap={}; 
  frutas.forEach(m => {
    console.log(m)
    ap=ap.concat(m)});
  res.send(`El servidor se est√° ejecutando en <a>http://${dinero}:${pa}/</a>`);
});
app.get("/api", (req, res) => {
  res.json(pa);
});

app.listen(port, () => { 
  console.log(`Example app listening at http://localhost:${port}`);
});

